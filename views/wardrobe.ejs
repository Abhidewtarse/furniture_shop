<%-include("Navbar.ejs")%>
<form action="/save_wardrobe"  onsubmit="preventDefault()"  method="post" enctype="multipart/form-data"  >
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center mb-3 mt-4">
        <h2>Add wardrobe</h2>
      </div>
      
      <div class="col-md-4  mb-3">
        <label for=""> Product Name</label>
        <input type="text" name="name" class="form-control" />
      </div>
      <div class="col-md-4  mb-3">
        <label for="">Product_price</label>
        <input type="number" name="price" class="form-control" />
      </div>
      <div class="col-md-4 mt-3 mb-3">
        <label for=""> Product Details</label>
        <input type="text" name="details" class="form-control" />
      </div>

      <div class="col-md-4 mt-3 mb-3">
        <label for=""> Product Material</label>
        <input type="text" name="material" class="form-control" />
      </div>

      <div class="col-md-4 mt-3 mb-3">
        <label for=""> Product Dimension</label>
        <input type="text" name="size" class="form-control" />
      </div>
      <div class="col-md-4 mt-3 mb-3">
        <label for=""> Product color</label>
        <input type="color" name="color" class="form-control" />
      </div>
      <div class="col-md-4 mt-3 mb-3">
        <label for=""> Product Image</label>
        <input type="file"  name="image" class="form-control" />
      </div>
    </div>
    <div class="col-md-12 mt-4 text-center">
      <button class="btn btn-primary">Save</button>
    </div>
  </div>
</form>

<hr>

<div class="container-fluid bg-white p-4">
  <div class="row">
    <div class="col-md-12 mb-3">
      <h3>Product List
    </h3>     
    </div>
    <div class="col-md-12">
      <table class="table table-bordered table-striped table-sm">
        <tr>
          <th>Action</th>
          <th>Sr.No</th>         
          <th>Product Name</th>
          <th>Product Price</th>
          <th>Product Size</th>
          <th>Product Material</th>
          <th>Product Color</th>
        </tr>
        <%
        for (var i=0;i<products.length;i++)  {  %>
          <tr class="text-center">
            <td >
              <div style="width: 100px;">
                <a href="/edit_product/<%=products[i].product_id%>" style="text-decoration: none;">  
                  <button class="btn btn-primary">
                    <i class="fa fa-edit"></i>
                  </button>
                </a>&nbsp;&nbsp;
                <a href="/delete_product/<%=products[i].product_id%>" onclick="return confirm('Are you sure you want to delete data?')"><button  class="btn btn-danger " style="text-decoration: none;"><i class="fa fa-trash"></i></button></a>
              </div>
            </td>
            <td><%=i+1%></td>
           
            <td><%=products[i].name%></td>
            <td> &#8377; <%=products[i].price%></td>
            <td><%=products[i].size%></td>    
            <td><%=products[i].material%></td>            
            <td ><div style=" height: 30px;border: 1px solid black; width: 50px; border-radius: 50px; background-color:<%=products[i].color%>"></div></td>

          </tr>
          <% } %>
      </table>
    </div>
  </div>
</div>



<%-include("Footer.ejs")%>

