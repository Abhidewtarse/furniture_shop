<%-include("Navbar.ejs")%>
<form action="/save_product_type" method="post">
  <div class="container-fluid bg-white p-4 mb-3">
    <div class="row justify-content-center">
      <div class="col-md-12 text-center mb-3">
        <h2>Add Product Type</h2>
      </div>
      <div class="col-md-6">
        Enter Type:
        <input type="text" name="product_type" class="form-control" />
      </div>
      <div class="col-md-3 mb-3">
        <br />
        <button class="btn btn-primary">Save Product Type</button>
      </div>
    </div>
  </div>
</form>

<hr>

<div class="container-fluid bg-white p-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3>All Product Types</h3>
    </div>
    <div class="col-md-8">
      <table class="table table-bordered text-center">
        <tr >
          <th>Action</th>
          <th>Sr No</th>
          <th>Types</th>
        </tr>
        <% for(var i=0;i<types.length;i++) { %>
        <tr >
          <td>
            <a href="/delete_products_type/<%=types[i].product_type_id%>" onclick="return confirm('Are you Sure ?')"><button class="btn btn-danger"><i class="fa fa-trash"></i></button></a>
          </td>
          <td><%=i+1%></td>
          <td><%=types[i].product_type%></td>
        </tr>
        <% } %>
      </table>
    </div>
  </div>
</div>

<%-include("Footer.ejs")%>
